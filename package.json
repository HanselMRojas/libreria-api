{
  "name": "libreria.api",
  "version": "0.2.0",
  "description": "Proyecto Reserva de Libros",
  "main": "dist/app.js",
  "dependencies": {
    "@sendgrid/client": "^6.4.0",
    "axios": "^0.19.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "figlet": "^1.2.4",
    "helmet": "^3.21.1",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "mime": "^2.4.4",
    "moment": "^2.24.0",
    "mongoose": "^5.9.10",
    "mongoose-keywords": "^0.4.0",
    "multer": "^1.4.2",
    "querymen": "^2.1.3",
    "slug": "^1.1.0",
    "uuid-base62": "^0.1.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^24.0.25",
    "@types/mime": "^2.0.1",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.7.14",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.37",
    "@types/slug": "^0.9.1",
    "@types/supertest": "^2.0.8",
    "chalk": "^2.4.2",
    "cross-env": "^6.0.3",
    "jest": "^25.2.6",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "tsc": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpileOnly ./src/__bin__/run.ts",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --detectOpenHandles --watch .",
    "start": "node ./dist/src/__bin__/run.js",
    "build": "tsc",
    "docker-bp": "docker build -t registry.gitlab.com/hansel-m-rojas/libreria/libreria-api . && docker push registry.gitlab.com/hansel-m-rojas/libreria/libreria-api"
  },
  "jest": {
    "moduleFileExtensions": [
      "json",
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts)"
    ],
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/domuslab/gestor_web/agente-virtual/central-api.git"
  },
